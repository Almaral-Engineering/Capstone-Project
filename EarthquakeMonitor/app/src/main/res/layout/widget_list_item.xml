<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/earthquake_list_item_vertical_padding"
    android:paddingTop="@dimen/earthquake_list_item_vertical_padding">

    <TextView
        android:id="@+id/widget_magnitude_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="@dimen/earthquake_list_item_padding"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="5.0"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_place_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/earthquake_list_item_padding"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="5 km N of Los Angeles, CA"/>
    </LinearLayout>

</LinearLayout>