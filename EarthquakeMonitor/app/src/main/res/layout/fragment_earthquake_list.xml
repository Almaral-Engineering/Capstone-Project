<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almareng.earthquakemonitor.list.EarthquakeListFragment">

    <ListView
        android:id="@+id/earthquake_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:dividerHeight="@dimen/activity_earthquake_list_divider_height"
        android:paddingLeft="@dimen/activity_earthquake_list_padding"
        android:paddingRight="@dimen/activity_earthquake_list_padding"/>

    <TextView
        android:id="@+id/earthquake_list_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/earthquake_list_empty_view_message"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_centerInParent="true"/>

</RelativeLayout>
